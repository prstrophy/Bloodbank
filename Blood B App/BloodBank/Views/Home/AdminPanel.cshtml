@model  BloodBank.Models.BloodRequestViewModel

@{
    ViewBag.Title = "AdminPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    a {
        color: black;
    }
</style>

<div class="container">
    <h2>AdminPanel</h2>

    <ul class="nav nav-tabs portalTabs">
        <li class="active"><a data-toggle="tab" href="#home" style="color:black;">Users</a></li>
        <li><a data-toggle="tab" href="#req" style="color:black;">Blood Requests</a></li>


    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <br />
            <table class="table" style="">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.DistrictId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.CityId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.BloodGroupId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.EmailConfirmed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.Gender)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.Users.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.Number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.UserType)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.ListUsers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistrictId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CityId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroupId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailConfirmed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.UserType)
                        </td>
                        <td>

                            @Html.ActionLink("Details", "Details", "Users", new { id = item.Id }, null) |
                            @Html.ActionLink("Delete", "Delete", "Users", new { id = item.Id }, null)
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div id="req" class="tab-pane fade in">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.PatientName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.BloodGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.Hospital_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.Hospital_Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.ContactName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.ContactNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodRequest.RequiredDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.ListBloodRequest)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hospital_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hospital_Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequiredDate)
                        </td>
                        <td>

                            @Html.ActionLink("Details", "Details", "BloodRequests", new { id = item.Id }, null) |
                            @Html.ActionLink("Delete", "Delete", "BloodRequests", new { id = item.Id }, null)
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>